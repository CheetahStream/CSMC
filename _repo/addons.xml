<?xml version="1.0" encoding="UTF-8"?>
<addons>
    <addon id="repository.cs" name="CSRepo V0.1.0" version="0.1.0" provider-name="Cheetah Smart">
        <requires>
            <import addon="xbmc.addon" version="12.0.0"/>
        </requires>
        <extension point="xbmc.addon.repository" name="CSRepoV0.1.0">
            <info compressed="false">https://raw.githubusercontent.com/CheetahStream/CSTest/master/_repo/addons.xml</info>
            <checksum>https://raw.githubusercontent.com/CheetahStream/CSTest/master/_repo/addons.xml.md5</checksum>
            <datadir zip="true">https://raw.githubusercontent.com/CheetahStream/CSTest/master/_repo/</datadir>
            <hashes>false</hashes>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary>Official Repo for Cheetah Smart TV Boxes</summary>
            <description>The description can be longer. Using [CR] you can create a newline. The use of other markup is not advised.</description>
            <platform>all</platform>
    </extension>
</addon>

<addon
  id="plugin.video.SportsDevil"
  version="2"
  name="SportsDevil"
  provider-name="MaxMustermann">
  <requires>
   <import addon="xbmc.python" version="2.14.0"/>
   <import addon="script.module.requests" />
   <import addon="script.module.pydevd" version="4.4.0" optional="true"/>
  </requires>
  <extension
    point="xbmc.python.pluginsource"
    library="default.py">
   <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary>Play videos of different sports streaming sites</summary>
    <description>Play videos of different sports streaming sites</description>
    <license>GNU GENERAL PUBLIC LICENSE. Version 2, June 1991</license>
    <platform>all</platform>
  </extension>
</addon>
</addons>
