<?xml version="1.0" encoding="UTF-8"?>
<addons>
    <addon id="repository.cs" name="CSRepo V0.1.0" version="0.1.0" provider-name="Cheetah Smart">
        <requires>
            <import addon="xbmc.addon" version="12.0.0"/>
        </requires>
        <extension point="xbmc.addon.repository" name="CSRepoV0.1.0">
            <info compressed="false">https://raw.githubusercontent.com/CheetahStream/CSMC/master/_repo/addons.xml</info>
            <checksum>https://raw.githubusercontent.com/CheetahStream/CSMC/master/_repo/addons.xml.md5</checksum>
            <datadir zip="true">https://raw.githubusercontent.com/CheetahStream/CSMC/master/_repo/</datadir>
            <hashes>false</hashes>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary>Official Repo for Cheetah Smart TV Boxes</summary>
            <description>The description can be longer. Using [CR] you can create a newline. The use of other markup is not advised.</description>
            <platform>all</platform>
    </extension>
</addon>

<addon id="script.ivueguide" name="Ivue TV Guide" version="0.0.5" provider-name="iVue Tv Guide">
	<requires>
		<import addon="xbmc.python" version="2.1.0"/>
		<import addon="script.module.simplejson" version="2.0.10"/>
	</requires>
	<extension point="xbmc.python.script" library="addon.py"/>
    <extension point="xbmc.service" library="service.py" start="login"/>
	<extension point="xbmc.addon.metadata">
	<provides>video</provides>
		<description lang="en">Ivue TV Guide dedicated tv guide for multiple 3rd party addons</description>
		<disclaimer lang="en">Ivue Guide is forked and based on FTV Guide, Dixie , Ivue , tommy winthers original code, </disclaimer>
	</extension>
</addon>
</addons>
